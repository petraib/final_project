<div class="page-header">
  <h1>
   <%= current_user.username %>'s Models
    <a href="/models/new" class="btn btn-lg btn-success"> <i class="fa fa-plus"></i></a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Model Name</th>
        <th>Actions</th>
      </tr>

      <% @models.each do |model| %>
      <tr>
        <% if current_user.id== model.user_id %>   
        <td><a href="/models/<%= model.id %>" ><%= model.mname %></a></td>
        <td>
          <a href="/models/<%= model.id %>/edit" ><i class="fa fa-pencil" aria-hidden="true"></i></a>
          <a href="/delete_model/<%= model.id %>" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
        </td>
        <% end %>
      </tr>
      <% end %>
    </table>
  </div>
</div>
