<div class="page-header">
  <h1>
    Authors
    <a href="/authors/new" class="btn btn-lg btn-success"><i class="fa fa-plus"></i></a>
  </h1>
</div>

<%= alphabetical_paginate @alphaParams %>

<div id="pagination_table"></div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>

      <% @authors.each do |author| %>
      <tr>
        <td><a href="/authors/<%= author.id %>" class="btn btn-link"><%= author.name %></a></td>
        <td>
          <a href="/authors/<%= author.id %>/edit" class="btn btn-link"><i class="fa fa-pencil"></i></a>
          <a href="/delete_author/<%= author.id %>" class="btn btn-link" rel="nofollow"><i class="fa fa-trash-o"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
