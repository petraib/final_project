<div class="page-header">
  <h1>
    Indicators
    <a href="/indicators/new" class="btn btn-lg btn-success">New Indicator</a>
  </h1>
</div>

 
<div class="row">
  <div class="col-md-12">
   
 
     <table class="table table-striped table-hover">

     <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Database key</th>
      </tr>
      
      <% @indicators.each do |indicator| %>
        <tr>
        <td><a href="/indicators/<%= indicator.id %>"><%= indicator.name %></a></td>
        <td><%= indicator.description %></td>
        <td><a href="/indicators/<%= indicator.id %>"><%= indicator.database_key %></td>

       </tr>  
      <% end %>
      </table>
    
  </div>
</div>


<%= alphabetical_paginate @alphaParams %>
 <div id="pagination_table"></div>
