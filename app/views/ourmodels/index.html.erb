<div class="page-header">
  <h1>
    Ourmodels
    <a href="/ourmodels/new" class="btn btn-lg btn-success">New Ourmodel</a>
  </h1>
</div>

 <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
 <script type="text/javascript">
      google.charts.load('current', {'packages':['gauge']});
      google.charts.setOnLoadCallback(drawChart);

      function drawChart() {

        var data = google.visualization.arrayToDataTable([
          ['Label', 'Value'],
          ['Exposure', <%=@exposure %>]
        ]);

        var options = {
          width: 300, height: 300,
          redFrom: -100, redTo: 0,
          yellowFrom:0,greenTo: 100,
          greenFrom:100,greenTo: 200,
          minorTicks: 5,
          min: -100, max: 200
        };

        var chart = new google.visualization.Gauge(document.getElementById('chart_div'));

        chart.draw(data, options);

        
      }
    </script>

<div class = "chart_container" id="chart_div" style="width: 300px; height: 300px; margin-top: 100px; margin-left: 600px"> </div>


<div class="row">
  <div class="col-md-12">

    <%= bar_chart @dt, stacked: true %> 


 </div>
</div>


<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Model weight</th>
         <th>Model name</th>
        <th>Actions</th>
      </tr>

      <% @ourmodels.each do |ourmodel| %>
      <tr>
        <td><%= ourmodel.model_weight %></td>
        <td><%= ourmodel.ourmodel_name %></td>

        <td>
          <a href="/ourmodels/<%= ourmodel.id %>" class="btn btn-primary">Show</a>
          <a href="/ourmodels/<%= ourmodel.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_ourmodel/<%= ourmodel.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

</html>



 

