<div class="page-header">
  <h1>
    Variables
    <a href="/variables/new" class="btn btn-lg btn-link"><i class = "fa fa-plus"></i></a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Indicator</th>
        <th>Model</th>
        <th>Weight</th>
        <th>Actions</th>
      </tr>

      <% @variables.each do |variable| %>
      <tr>
        <% if current_user.id== Model.find(variable.model_id).user_id %>   

        <td><%= Indicator.find(variable.indicator_id).name %></td>
        <td><%= Model.find(variable.model_id).mname %></td>
        <td><%= variable.weight %></td>
        <td>
          <a href="/variables/<%= variable.id %>" class="btn btn-primary">Show</a>
          <a href="/variables/<%= variable.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_variable/<%= variable.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
        
        <% end %>
        
      </tr>
      <% end %>
    </table>
  </div>
</div>
